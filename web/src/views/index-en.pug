extends base/layout

//- Block main
block main

  include components/s-section-top

  //- List each section (the order is linked to the order of the c-nav)
  //- _items is in the JSON injected in the view with gulp-data (called _project.json)
  .s-main__section.s-main__checklist

    if _items !== undefined

      +checklist-section({
        dataSection: _items.technology,
        sectionTitle: "Technology"
      })

      +checklist-section({
        dataSection: _items.people,
        sectionTitle: "People"
      })

      +checklist-section({
        dataSection: _items.process,
        sectionTitle: "Process"
      })

      +checklist-section({
        dataSection: _items.domain,
        sectionTitle: "Business"
      })

  include components/s-section-bottom
